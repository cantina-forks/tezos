(executable
 (name ezResto_test)
 (modules ezDirectory ezResto_test ezServices)
 (flags (:standard -safe-string))
 (libraries ezresto-directory lwt lwt.unix))

(alias
 (name runtest_ezresto)
 (action (run %{exe:ezResto_test.exe})))

(executable
 (name resto_test)
 (modules directory resto_test services)
 (flags (:standard -safe-string))
 (libraries resto-directory resto-json ocplib-json-typed ocplib-json-typed-bson lwt lwt.unix))

(alias
 (name runtest_resto)
 (action (run %{exe:resto_test.exe})))

(alias
 (name runtest)
 (deps (alias runtest_resto)
       (alias runtest_ezresto)))
